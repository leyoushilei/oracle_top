需要设置环境变量 export PATH=$ORACLE_HOME/perl/bin:$PATH
需要设置环境变量 export LD_LIBRARY_PATH=$ORACLE_HOME/lib:$LD_LIBRARY_PATH

# 基本使用
#perl oracle_top.pl
# 指定刷新间隔和运行次数
#perl oracle_top.pl -i 3 -c 10
# 输出到文件（追加模式）
#perl oracle_top.pl -o /tmp/monitor.log
# 同时指定刷新间隔和输出文件
#perl oracle_top.pl -i 5 -o monitor.txt
# 完整参数示例
#perl oracle_top.pl -interval 2 -count 20 -top 10 -output /var/log/oracle_top.log
